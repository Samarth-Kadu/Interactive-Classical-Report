REPORT ZINTERACTIVE_CLASSICAL_REPORT.


TYPES : BEGIN OF STR1,
  ONO TYPE ZONO,
  ORDER_DATE TYPE ZODATE,
  PAY_MODE TYPE ZPM,
  CURRENCY TYPE ZCURR,
  END OF STR1.

DATA INT_TABLE TYPE TABLE OF STR1.
DATA WAREA TYPE STR1.

DATA: LV_ONO TYPE ZONO.


TYPES: BEGIN OF  STR2,
  INO TYPE ZONO,
  ORDER_ITEM_NO TYPE ZINO,
  ITEM_COST TYPE ZICOST,
  END OF STR2.

DATA INT_TABLE2 TYPE TABLE OF STR2.
DATA WAREA2 TYPE STR2.

SELECT-OPTIONS: S_ONO FOR LV_ONO.


START-OF-SELECTION.
  SELECT ONO  ORDER_DATE PAY_MODE  CURRENCY
  FROM ZORDER_TABLE
  INTO TABLE INT_TABLE
  WHERE ONO IN S_ONO.

LOOP AT INT_TABLE INTO WAREA.
  WRITE :/ WAREA-ONO, WAREA-ORDER_DATE, WAREA-PAY_MODE, WAREA-CURRENCY.
ENDLOOP.

AT LINE-SELECTION.
  SELECT ONO ORDER_ITEM_NO ITEM_COST
  FROM ZITEM_TABLE
  INTO TABLE INT_TABLE2
  WHERE ONO = SY-LISEL+0(10).

LOOP AT INT_TABLE2 INTO WAREA2.
  WRITE: / WAREA2-INO, WAREA2-ORDER_ITEM_NO, WAREA2-ITEM_COST.
ENDLOOP.